{
  "compilerOptions": {
    // Para compilar a versiones mas recientes
    "target": "esnext",
    "module": "nodenext",
    "moduleResolution": "NodeNext",
    // Para que jest quiera funcionar
    "isolatedModules": true,
    // Otros parametros
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": false,
    "incremental": true,
    "tsBuildInfoFile": ".tsbuildinfo",
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "resolveJsonModule": true,
    // Para los decoradores de los modelos, [SEQUELIZE u otro ORM con decoradores]
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    // Para simplificar los imports utilizando @ en vez de todos los "../../" de las rutas
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist", "src/**/*.test.ts"]
}
