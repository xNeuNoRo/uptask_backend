{
  "name": "rest-api-uptask",
  "version": "1.0.0",
  "description": "Gestor de tareas moderno",
  "main": "src/index.ts",
  "scripts": {
    "start": "tsx src/index.ts",
    "dev": "pnpm dlx tsx watch src/index.ts",
    "prepare-husky": "git init && pnpm dlx husky-init && pnpm install && npx husky add .husky/pre-commit \"pnpm lint-staged\"",
    "check": "node build.mjs",
    "lint": "eslint . --ext .ts,.js",
    "lint:fix": "eslint . --ext .ts,.js --fix",
    "format": "prettier --check 'src/**/*.{ts,js,json,md}'",
    "format:fix": "prettier --write 'src/**/*.{ts,js,json,md}'",
    "typecheck": "tsc --noEmit",
    "build": "tsc --noEmit false",
    "build:watch": "tsc --watch",
    "build:clean": "rm -rf dist",
    "build:start": "node dist/index.js",
    "test": "jest --detectOpenHandles",
    "test:coverage": "pnpm run pretest && jest --detectOpenHandles --coverage && pnpm run posttest",
    "pretest": "echo Iniciando pruebas",
    "posttest": "echo Pruebas finalizadas.",
    "prepare": "if [ \"$NODE_ENV\" = \"development\" ]; then husky install; fi",
    "jest:init": "pnpm dlx ts-jest config:init"
  },
  "keywords": [],
  "author": "Angel Gonzalez M.",
  "license": "MIT",
  "packageManager": "pnpm@10.17.1",
  "files": [
    "src/",
    "build.mjs",
    "eslint.config.cjs",
    "package.json",
    "prettier.config.cjs",
    "tsconfig.json"
  ],
  "lint-staged": {
    "*.{ts,js,json,md}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-unicorn": "^60.0.0",
    "fs": "0.0.1-security",
    "husky": "^8.0.0",
    "jest": "^30.0.5",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.1",
    "tsx": "^4.20.4",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "colorette": "^2.0.20",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "mongoose": "^8.18.2"
  }
}
