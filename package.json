{
  "name": "rest-api-uptask",
  "version": "1.0.0",
  "description": "Gestor de tareas moderno",
  "main": "src/server.ts",
  "scripts": {
    "start": "tsx src/server.ts",
    "dev": "pnpm dlx tsx watch src/server.ts",
    "emails:dev": "pnpm dlx react-email dev --port 4001 --dir src/emails/ui/views",
    "prepare-husky": "git init && pnpm dlx husky-init && pnpm install && npx husky add .husky/pre-commit \"pnpm lint-staged\"",
    "check": "node build.mjs",
    "lint": "eslint . --ext .ts,.js",
    "lint:fix": "eslint . --ext .ts,.js --fix",
    "format": "prettier --check 'src/**/*.{ts,js,json,md}'",
    "format:fix": "prettier --write 'src/**/*.{ts,js,json,md}'",
    "typecheck": "tsc --noEmit",
    "build": "tsc --noEmit false && tsc-alias && pnpm run build:static && copyfiles -u 2 \"src/public/**/*\" dist/public",
    "build:static": "tsx src/utils/hash_static.ts src/public/raw src/public/assets",
    "build:watch": "tsc --watch",
    "build:clean": "rm -rf dist",
    "build:start": "node dist/server.js",
    "test": "jest --detectOpenHandles",
    "test:coverage": "pnpm run pretest && jest --detectOpenHandles --coverage && pnpm run posttest",
    "pretest": "echo Iniciando pruebas",
    "posttest": "echo Pruebas finalizadas.",
    "prepare": "if [ \"$NODE_ENV\" = \"development\" ]; then husky install; fi",
    "jest:init": "pnpm dlx ts-jest config:init"
  },
  "keywords": [],
  "author": "Angel Gonzalez M.",
  "license": "MIT",
  "packageManager": "pnpm@10.18.3",
  "files": [
    "src/",
    "build.mjs",
    "eslint.config.cjs",
    "package.json",
    "prettier.config.cjs",
    "tsconfig.json"
  ],
  "lint-staged": {
    "*.{ts,js,json,md}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@react-email/preview-server": "4.3.1",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/nodemailer": "^7.0.2",
    "@types/react": "19.0.10",
    "@types/react-dom": "19.0.4",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "copyfiles": "^2.4.1",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-unicorn": "^60.0.0",
    "fs": "0.0.1-security",
    "husky": "^8.0.0",
    "jest": "^30.0.5",
    "lint-staged": "^16.1.5",
    "pino-pretty": "^13.1.1",
    "prettier": "^3.6.2",
    "react-email": "4.2.8",
    "supertest": "^7.1.4",
    "tailwindcss": "^4.1.14",
    "ts-jest": "^29.4.1",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.20.4",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@react-email/components": "0.5.2",
    "@react-email/render": "1.2.2",
    "argon2": "^0.44.0",
    "colorette": "^2.0.20",
    "colors": "^1.4.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "express-validator": "^7.2.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.18.2",
    "nodemailer": "^7.0.9",
    "pino": "^9.12.0",
    "pino-http": "^10.5.0",
    "pino-loki": "^2.6.0",
    "react": "19.0.0",
    "react-dom": "19.0.0"
  }
}
